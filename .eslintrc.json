{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["warn", "always"],
        "comma-dangle": "off",
        "space-before-function-paren": "off",
        "space-infix-ops": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error",
        "camelcase": "off",
        "@typescript-eslint/naming-convention": [
            "warn",
            {
                "selector": "variable",
                "format": [
                  "snake_case"
                ]
            },
            {
                "selector": "function",
                "format": [
                    "camelCase"
                ]
            }
        ]
    }
}
